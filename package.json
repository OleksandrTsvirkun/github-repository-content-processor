{
  "name": "@oleksandrtsvirkun/github-repository-content-processor",
  "version": "1.0.0",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "gray-matter": "^4.0.3",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3"
  }
}
